<%= @list.name %>

<% @list.bookmarks.each do |bookmark| %>
  <li>
    <%= bookmark.movie.title %>
  </li>
<% end %>


<!-- link to create bookmark page!!! -->
<%= link_to "delete this list", list_path(@list.id), class: "btn btn-cancel", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this list?" } %>
<%= link_to "add bookmark", new_list_bookmark_path(@list.id), class: "btn btn-light" %>
<%= link_to "see all lists", root_path(@lists), class: "btn btn-light" %>
